@model IEnumerable<RegistrationMVCProject.Models.Employee>

@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salaries)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @foreach (var empItem in item.Salaries)
                {
                    @empItem.Salary_Id
                    <br/>
                    @empItem.TotalSalary
                    <br/>
                    @empItem.date
                    <br/>
                }
            </td>
        </tr>
}
    </tbody>
</table>
